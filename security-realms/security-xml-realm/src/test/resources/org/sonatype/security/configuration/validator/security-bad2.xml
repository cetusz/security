<security>
    <version>2.0.0</version>    
    <privileges>      
      <privilege>
        <id>1</id>
        <name>priv</name>
        <type>method</type>
        <properties>
          <property>
            <key>method</key>
            <value>read</value>
          </property>
          <property>
            <key>permission</key>
            <value>/some/path/</value>
          </property>
        </properties>
      </privilege>      
    </privileges>    
    <roles>      
        <!-- invalid id of 0 -->
        <!-- no session timeout --> <!-- No longer required, will be removed from model soon -->
        <role>      
            <id>0</id>
            <name>name</name>
        </role>
        
        <!-- no id -->
        <!-- no name -->
        <!-- invalid session timeout --> <!-- No longer required, will be removed from model soon -->
        <role>
          <sessionTimeout>0</sessionTimeout>
          <privileges>
            <privilege>1</privilege>
          </privileges>
        </role>
        
        <role>
            <id>arole</id>
            <name>name</name>
            <sessionTimeout>25</sessionTimeout>
            <privileges>
              <privilege>1</privilege>
            </privileges>
        </role>
        
        <!-- Duplicate role id -->      
        <role>
            <id>arole</id>
            <name>name</name>
            <sessionTimeout>25</sessionTimeout>
            <privileges>
              <privilege>1</privilege>
            </privileges>
        </role>   
        
        <!-- including itself -->
        <role>
          <id>recursive</id>
          <name>recursive</name>
          <sessionTimeout>25</sessionTimeout>
          <roles>
            <role>recursive</role>
          </roles>
        </role>
        
        <!-- including itself via another role -->
        <role>
          <id>recursive2</id>
          <name>recursive2</name>
          <sessionTimeout>25</sessionTimeout>
          <roles>
            <role>recursive3</role>
          </roles>
        </role>     
        
