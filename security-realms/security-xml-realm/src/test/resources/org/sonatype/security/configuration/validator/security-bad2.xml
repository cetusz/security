          <sessionTimeout>25</sessionTimeout>
          <roles>
            <role>recursive5</role>
          </roles>
        </role>
        
        <!-- including itself via another role -->
        <role>
          <id>recursive5</id>
          <name>recursive5</name>
          <sessionTimeout>25</sessionTimeout>
          <roles>
            <role>recursive6</role>
          </roles>
        </role>
        
        <!-- including itself via another role -->
        <role>
          <id>recursive6</id>
          <name>recursive6</name>
          <sessionTimeout>25</sessionTimeout>
          <roles>
            <role>recursive4</role>
          </roles>
        </role>
        
        <role>
          <id>errantRole1</id>
